@model ClinicManagementSystem.ViewModel.DoctorAvailability.DoctorAvailabilityViewModel

@{
    ViewData["Title"] = "Edit Doctor Availability";
}

<div class="main-content">
    <div class="pb-5 px-lg-5">
        <h2 class="page-title my-5 text-primary">Edit Doctor Availability</h2>

        <form asp-action="Edit" asp-controller="DoctorAvailability" method="post" class="card border rounded shadow-sm p-4" novalidate>
            <input type="hidden" asp-for="Id" />

            <div class="card-body">

                <!-- Doctor -->
                <div class="mb-4">
                    <label asp-for="DoctorId" class="form-label my-2"></label>
                    <select asp-for="DoctorId" class="form-select py-3" asp-items="ViewBag.DoctorList"></select>
                    <span asp-validation-for="DoctorId" class="text-danger small"></span>
                </div>

                <!-- Day of Week -->
                <div class="mb-4">
                    <label asp-for="DayOfWeek" class="form-label my-2"></label>
                    <select asp-for="DayOfWeek" class="form-select py-3" asp-items="Html.GetEnumSelectList<DayOfWeek>()"></select>
                    <span asp-validation-for="DayOfWeek" class="text-danger small"></span>
                </div>

                <!-- Start Time -->
                <div class="mb-4">
                    <label asp-for="StartTime" class="form-label my-2"></label>
                    <input asp-for="StartTime" type="time" class="form-control py-3" />
                    <span asp-validation-for="StartTime" class="text-danger small"></span>
                </div>

                <!-- End Time -->
                <div class="mb-4">
                    <label asp-for="EndTime" class="form-label my-2"></label>
                    <input asp-for="EndTime" type="time" class="form-control py-3" />
                    <span asp-validation-for="EndTime" class="text-danger small"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between gap-3">
                    <a asp-action="Index" class="btn btn-outline-secondary w-50 py-2">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary w-50 py-2">
                        <i class="bi bi-pencil"></i> Update Availability
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

