@model ClinicManagementSystem.ViewModel.DoctorAvailability.DoctorAvailabilityViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Doctor Availability Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Day Of Week</dt>
                <dd class="col-sm-9">@Model.DayOfWeek</dd>

                <dt class="col-sm-3">Start Time</dt>
                <dd class="col-sm-9">@Model.StartTime</dd>

                <dt class="col-sm-3">End Time</dt>
                <dd class="col-sm-9">@Model.EndTime</dd>
            </dl>

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </div>
</div>
