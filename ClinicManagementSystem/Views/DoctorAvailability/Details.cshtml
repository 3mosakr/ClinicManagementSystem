@model ClinicManagementSystem.ViewModel.DoctorAvailability.DoctorAvailabilityViewModel

@{
    ViewData["Title"] = "Doctor Availability Details";
}

<div class="my-5">
    <div class="card shadow-sm border-0 rounded-4">
        <!-- Header -->
        <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
            <h2 class="mb-0">
                <i class="bi bi-clock-history"></i> Doctor Availability Details
            </h2>
        </div>

        <!-- Body -->
        <div class="card-body p-4">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h6 class="text-muted">Doctor Name</h6>
                    <p class="fw-semibold">@Model.DoctorName</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">Day of Week</h6>
                    <p class="fw-semibold">@Model.DayOfWeek</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h6 class="text-muted">Start Time</h6>
                    <p class="fw-semibold">@Model.StartTime</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">End Time</h6>
                    <p class="fw-semibold">@Model.EndTime</p>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit Availability
                </a>
            </div>
        </div>
    </div>
</div>

