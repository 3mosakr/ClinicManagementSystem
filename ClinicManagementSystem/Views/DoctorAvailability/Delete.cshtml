@using ClinicManagementSystem.ViewModel.DoctorAvailability
@model DoctorAvailabilityViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger">Delete Doctor Availability</h2>

    <div class="alert alert-warning">
        <h5>Are you sure you want to delete this?</h5>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Day Of Week</dt>
                <dd class="col-sm-9">@Model.DayOfWeek</dd>

                <dt class="col-sm-3">Start Time</dt>
                <dd class="col-sm-9">@Model.StartTime</dd>

                <dt class="col-sm-3">End Time</dt>
                <dd class="col-sm-9">@Model.EndTime</dd>
            </dl>

            <form asp-action="DeleteConfirmed" asp-controller="DoctorAvailability" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
