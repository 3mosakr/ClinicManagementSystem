@model IEnumerable<ClinicManagementSystem.ViewModel.DoctorAvailability.DoctorAvailabilityViewModel>

@{
    ViewData["Title"] = "Doctor Availabilities";
}

<div class="my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-clock-history"></i> Doctor Availabilities
        </h2>
        <a class="btn btn-primary shadow-sm px-4" asp-action="Create" asp-controller="DoctorAvailability">
            <i class="bi bi-plus-circle"></i> Add Availability
        </a>
    </div>

    <!-- Filter Section -->
    <div class="card shadow-sm border-0 mb-4 rounded-4">
        <div class="card-body">
            <form class="row g-3 align-items-center" method="get">
                <div class="col-md-6 d-flex gap-2">

                    <div class="flex-grow-1">
                        <label class="form-label fw-semibold">Search By Doctor's Name</label>
                        <input class="form-control" type="search" name="search" value="@ViewBag.search" placeholder="Type to search..." />
                    </div>

                    <div class="mt-4">
                        <button class="btn btn-outline-primary w-100 mt-2">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>

                <!-- Day Filter -->
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Filter by Day</label>
                    <select id="dayFilter" class="form-select">
                        <option value="all">All Days</option>
                        <option value="Sunday">Sunday</option>
                        <option value="Monday">Monday</option>
                        <option value="Tuesday">Tuesday</option>
                        <option value="Wednesday">Wednesday</option>
                        <option value="Thursday">Thursday</option>
                        <option value="Friday">Friday</option>
                        <option value="Saturday">Saturday</option>
                    </select>
                </div>

            </form>


        </div>
    </div>


    <!-- Alert -->
@if (TempData["Message"] != null)
{
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
}


    <!-- Doctor Availabilities Table -->
    <div class="table-responsive shadow-sm rounded-4">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-primary text-white">
                <tr>
                    <th>Doctor Name</th>
                    <th>Day</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody id="availabilityTable" class="bg-light">
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var item in Model)
                    {
                        <tr data-doctor="@item.DoctorName.ToLower()" data-day="@item.DayOfWeek">
                            <td>@item.DoctorName</td>
                            <td>@item.DayOfWeek</td>
                            <td>@item.StartTime</td>
                            <td>@item.EndTime</td>
                            <td class="text-center">
                                <a class="btn btn-outline-success btn-sm me-2"
                                   asp-action="Details"
                                   asp-route-id="@item.Id">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a class="btn btn-outline-primary btn-sm me-2"
                                   asp-action="Edit"
                                   asp-route-id="@item.Id">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id"
                                      method="post" style="display:inline;"
                                      onsubmit="return confirmDelete(event);">

                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">No availabilities found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Pagination -->
@if (ViewBag.TotalPages > 1)
{
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-page="@(ViewBag.CurrentPage - 1)"
                       asp-route-search="@ViewBag.search">Previous</a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-search="@ViewBag.search">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-page="@(ViewBag.CurrentPage + 1)"
                       asp-route-search="@ViewBag.search">Next</a>
                </li>
            </ul>
        </nav>
}

