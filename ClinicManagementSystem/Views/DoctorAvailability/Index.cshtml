@model IEnumerable<ClinicManagementSystem.ViewModel.DoctorAvailability.DoctorAvailabilityViewModel>

@{
    ViewData["Title"] = "Doctor Availabilities";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-clock-history"></i> Doctor Availabilities
        </h2>
        <a class="btn btn-primary shadow-sm px-4" asp-action="Create" asp-controller="DoctorAvailability">
            <i class="bi bi-plus-circle"></i> Add Availability
        </a>
    </div>

    <!-- Filter Section -->
    <div class="card shadow-sm border-0 mb-4 rounded-4">
        <div class="card-body">
            <div class="row g-3 align-items-center">
                <!-- Search Input -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Search by Doctor Name</label>
                    <input type="text" class="form-control" placeholder="Type doctor name..." id="searchInput" />
                </div>

                <!-- Day Filter -->
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Filter by Day</label>
                    <select id="dayFilter" class="form-select">
                        <option value="all">All Days</option>
                        <option value="Sunday">Sunday</option>
                        <option value="Monday">Monday</option>
                        <option value="Tuesday">Tuesday</option>
                        <option value="Wednesday">Wednesday</option>
                        <option value="Thursday">Thursday</option>
                        <option value="Friday">Friday</option>
                        <option value="Saturday">Saturday</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Doctor Availabilities Table -->
    <div class="table-responsive shadow-sm rounded-4">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-primary text-white">
                <tr>
                    <th></th>
                    <th>Doctor Name</th>
                    <th>Day</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody id="availabilityTable" class="bg-light">
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var item in Model)
                    {
                        <tr data-doctor="@item.DoctorName.ToLower()" data-day="@item.DayOfWeek">
                            <td>@index</td>
                            <td>@item.DoctorName</td>
                            <td>@item.DayOfWeek</td>
                            <td>@item.StartTime</td>
                            <td>@item.EndTime</td>
                            <td class="text-center">
                                <a class="btn btn-outline-success btn-sm me-2"
                                   asp-action="Details"
                                   asp-route-id="@item.Id">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a class="btn btn-outline-primary btn-sm me-2"
                                   asp-action="Edit"
                                   asp-route-id="@item.Id">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id"
                                      method="post" style="display:inline;"
                                      onsubmit="return confirmDelete(event);">

                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">No availabilities found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!--  JS for Filter & Search -->
<script>
    const searchInput = document.getElementById("searchInput");
    const dayFilter = document.getElementById("dayFilter");
    const rows = document.querySelectorAll("#availabilityTable tr");

    function applyFilters() {
        const keyword = searchInput.value.toLowerCase();
        const day = dayFilter.value;

        rows.forEach(row => {
            const matchesKeyword = row.dataset.doctor.includes(keyword);
            const matchesDay = (day === "all" || row.dataset.day === day);
            row.style.display = (matchesKeyword && matchesDay) ? "" : "none";
        });
    }

    searchInput.addEventListener("keyup", applyFilters);
    dayFilter.addEventListener("change", applyFilters);
</script>
@if (TempData["ShowDeleteToast"] != null)
{
    <script>
        window.onload = function() {
            const toast = new bootstrap.Toast(document.getElementById("deleteToast"));
            toast.show();
        }

    </script>
}

@await Html.PartialAsync("_ConfirmDelete")
@await Html.PartialAsync("_ToastNotification")