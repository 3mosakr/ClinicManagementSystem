@model ClinicManagementSystem.ViewModel.Account.LoginUserViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center min-height-80">
        <div class="login-container col-xl-4 col-lg-5 col-md-6 col-sm-8">
            <div class="login-card">
                <div class="login-header">
                    <div class="login-icon">
                        <i class="fas fa-stethoscope"></i>
                    </div>
                    <h2>Clinic Management</h2>
                    <p>Sign in to your Account</p>
                </div>

                <div class="login-body">
                    <form asp-action="Login" method="post" class="login-form">
                        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                        <div class="form-group">
                            <label asp-for="UserName" class="form-label">
                                <i class="fas fa-user"></i>Username
                            </label>
                            <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                            <span asp-validation-for="UserName" class="validation-message"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock"></i>Password
                            </label>
                            <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="validation-message"></span>
                        </div>

                        <div class="form-options">
                            <div class="remember-me">
                                <input asp-for="RememberMe" class="form-checkbox" />
                                <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                            </div>
                            <a href="#" class="forgot-password">Forgot password?</a>
                        </div>

                        <button type="submit" class="login-btn">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Sign In</span>
                        </button>
                    </form>
                </div>

                <div class="login-footer">
                    <p>Need an account? <a href="#" class="contact-link">Contact administrator</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>


    .min-height-80{
        min-height: 80vh;
    }

    .login-container {
        padding:20px;
    }

    .login-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border: 1px solid #e8f2fc;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .login-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
        }

    /* Header Styles */
    .login-header {
        background: linear-gradient(135deg, #3498db, #2c3e50);
        color: white;
        padding: 2.5rem 2rem;
        text-align: center;
        position: relative;
    }

    .login-icon {
        width: 70px;
        height: 70px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.3);
    }

        .login-icon i {
            font-size: 2rem;
        }

    .login-header h2 {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .login-header p {
        opacity: 0.9;
        font-size: 1rem;
        margin: 0;
    }

    .login-body {
        padding: 2.5rem 2rem;
    }

    .login-form {
        width: 100%;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }

        .form-label i {
            color: #3498db;
            width: 16px;
        }

    .form-control {
        width: 100%;
        padding: 1rem 1.25rem;
        border: 2px solid #e8f2fc;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8fafc;
    }

        .form-control:focus {
            outline: none;
            border-color: #3498db;
            background: #ffffff;
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
        }

        .form-control::placeholder {
            color: #a0aec0;
        }

    .form-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .remember-me {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-checkbox {
        width: 18px;
        height: 18px;
        border: 2px solid #d1d5db;
        border-radius: 4px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .form-checkbox:checked {
            background-color: #3498db;
            border-color: #3498db;
        }

    .form-check-label {
        color: #4a5568;
        font-size: 0.9rem;
        cursor: pointer;
    }

    .forgot-password {
        color: #3498db;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

        .forgot-password:hover {
            color: #2980b9;
            text-decoration: underline;
        }

    .login-btn {
        width: 100%;
        background: linear-gradient(135deg, #3498db, #2980b9);
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
    }

        .login-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(52, 152, 219, 0.4);
            background: linear-gradient(135deg, #2980b9, #2573a7);
        }

        .login-btn:active {
            transform: translateY(0);
        }

    .login-footer {
        padding: 1.5rem 2rem;
        background: #f8fafc;
        text-align: center;
        border-top: 1px solid #e8f2fc;
    }

        .login-footer p {
            margin: 0;
            color: #6b7280;
            font-size: 0.9rem;
        }

    .contact-link {
        color: #3498db;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

        .contact-link:hover {
            color: #2980b9;
            text-decoration: underline;
        }

    /* Validation Styles */
    .validation-summary {
        background: #fed7d7;
        border: 1px solid #feb2b2;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        color: #c53030;
        font-size: 0.9rem;
    }

        .validation-summary ul {
            margin: 0;
            padding-left: 1rem;
        }

    .validation-message {
        color: #e53e3e;
        font-size: 0.85rem;
        margin-top: 0.25rem;
        display: block;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .login-header {
            padding: 2rem 1.5rem;
        }

        .login-body {
            padding: 2rem 1.5rem;
        }

        .login-footer {
            padding: 1.25rem 1.5rem;
        }

        .form-options {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }
    }

    @@media (max-width: 576px) {
        .login-header {
            padding: 1.5rem 1rem;
        }

        .login-body {
            padding: 1.5rem 1rem;
        }

        .login-icon {
            width: 60px;
            height: 60px;
        }

            .login-icon i {
                font-size: 1.5rem;
            }

        .login-header h2 {
            font-size: 1.5rem;
        }
    }
</style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}