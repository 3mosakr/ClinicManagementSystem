@model ClinicManagementSystem.ViewModel.Visit.VisitCreateViewModel


@{
	ViewData["Title"] = "Create Visit";
}


<h2>Create Visit</h2>


<form asp-action="Create" method="post">
	<div class="form-group">
		<label asp-for="AppointmentId"></label>
		<input asp-for="AppointmentId" class="form-control" />
		<span asp-validation-for="AppointmentId" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Diagnosis"></label>
		<input asp-for="Diagnosis" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Prescription"></label>
<textarea asp-for="Prescription" class="form-control"></textarea>
	</div>
	<div class="form-group">
		<label asp-for="VisitDate"></label>
		<input asp-for="VisitDate" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="DoctorNotes"></label>
<textarea asp-for="DoctorNotes" class="form-control"></textarea>
	</div>
	<button type="submit" class="btn btn-primary">Create</button>
</form>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}