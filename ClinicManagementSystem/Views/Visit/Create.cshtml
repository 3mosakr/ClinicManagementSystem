@model ClinicManagementSystem.ViewModel.Visit.VisitViewModel

@{
    ViewData["Title"] = "Create Visit";
}

<h2>Create Visit</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label for="AppointmentId">Appointment</label>
        <select asp-for="AppointmentId" class="form-control" asp-items="ViewBag.Appointments">
            <option value="">-- Select Appointment --</option>
        </select>
        <span asp-validation-for="AppointmentId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Diagnosis"></label>
        <input asp-for="Diagnosis" class="form-control" />
        <span asp-validation-for="Diagnosis" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Prescription"></label>
        <textarea asp-for="Prescription" class="form-control"></textarea>
        <span asp-validation-for="Prescription" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="VisitDate"></label>
        <input asp-for="VisitDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="VisitDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DoctorNotes"></label>
        <textarea asp-for="DoctorNotes" class="form-control"></textarea>
        <span asp-validation-for="DoctorNotes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
