@model ClinicManagementSystem.ViewModel.Visit.VisitCreateViewModel

@{
    ViewData["Title"] = "Create Visit";
}

<div class="d-flex justify-content-between align-items-center my-4">
    <h4 class="mb-0">Create Visit<span class="text-primary"> Details</span></h4>
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left me-1"></i> Back to Visits
    </a>
</div>

<div class="card shadow-sm mx-auto" style="">
    <div class="card-body">
        <form asp-action="Create" method="post" novalidate>
            <div class="mb-3">
                <label for="AppointmentId" class="form-label">Appointment</label>
                <select asp-for="AppointmentId" class="form-select form-select-lg" asp-items="ViewBag.Appointments">
                    <option value="">-- Select Appointment --</option>
                </select>
                <span asp-validation-for="AppointmentId" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Diagnosis" class="form-label"></label>
                <input asp-for="Diagnosis" class="form-control form-control-lg" />
                <span asp-validation-for="Diagnosis" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Prescription" class="form-label"></label>
                <textarea asp-for="Prescription" class="form-control form-control-lg" rows="4"></textarea>
                <span asp-validation-for="Prescription" class="text-danger small"></span>
            </div>

            @* <div class="mb-3">
                <label asp-for="VisitDate" class="form-label"></label>
                <input asp-for="VisitDate" class="form-control form-control-lg" type="datetime-local" />
                <span asp-validation-for="VisitDate" class="text-danger small"></span>
            </div> *@

            <div class="row g-2">
                <div class="col">
                    <label asp-for="VisitDateDate" class="form-label">Date</label>
                    <input asp-for="VisitDateDate" class="form-control" type="date" />
                    <span asp-validation-for="VisitDateDate" class="text-danger small"></span>
                </div>
                <div class="col">
                    <label asp-for="VisitDateTime" class="form-label">Time</label>
                    <input asp-for="VisitDateTime" class="form-control" type="time" />
                    <span asp-validation-for="VisitDateTime" class="text-danger small"></span>
                </div>
            </div>


            <div class="mb-3">
                <label asp-for="DoctorNotes" class="form-label"></label>
                <textarea asp-for="DoctorNotes" class="form-control form-control-lg" rows="4"></textarea>
                <span asp-validation-for="DoctorNotes" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}