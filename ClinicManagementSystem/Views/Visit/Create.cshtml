@model ClinicManagementSystem.ViewModel.Visit.VisitCreateViewModel

@{
    ViewData["Title"] = "Create Visit";
}

<div class="main-content">
    <div class=" pb-5 px-lg-5">
        <h2 class="page-title my-5 text-primary">Add Visit</h2>

        <form asp-action="Create" method="post" class="card border rounded shadow-sm p-4" novalidate>
            <div class="card-body">

                <!-- Appointment -->
                <div class="mb-4">
                    <label for="AppointmentId" class="form-label my-2">Appointment</label>
                    <select asp-for="AppointmentId" class="form-select py-3" asp-items="ViewBag.Appointments">
                        <option value="">-- Select Appointment --</option>
                    </select>
                    <span asp-validation-for="AppointmentId" class="text-danger small"></span>
                </div>

                <!-- Diagnosis -->
                <div class="mb-4">
                    <label asp-for="Diagnosis" class="form-label my-2"></label>
                    <input asp-for="Diagnosis" class="form-control py-3" placeholder="Enter diagnosis" />
                    <span asp-validation-for="Diagnosis" class="text-danger small"></span>
                </div>

                <!-- Prescription -->
                <div class="mb-4">
                    <label asp-for="Prescription" class="form-label my-2"></label>
                    <textarea asp-for="Prescription" class="form-control py-3" rows="4" placeholder="Enter prescription details"></textarea>
                    <span asp-validation-for="Prescription" class="text-danger small"></span>
                </div>

                <!-- Date & Time -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="VisitDateDate" class="form-label my-2">Date</label>
                        <input asp-for="VisitDateDate" type="date" class="form-control py-3" />
                        <span asp-validation-for="VisitDateDate" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="VisitDateTime" class="form-label my-2">Time</label>
                        <input asp-for="VisitDateTime" type="time" class="form-control py-3" />
                        <span asp-validation-for="VisitDateTime" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Doctor Notes -->
                <div class="mb-4">
                    <label asp-for="DoctorNotes" class="form-label my-2"></label>
                    <textarea asp-for="DoctorNotes" class="form-control py-3" rows="4" placeholder="Enter doctor's notes"></textarea>
                    <span asp-validation-for="DoctorNotes" class="text-danger small"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between gap-3">
                    <a asp-action="Index" class="btn btn-outline-secondary w-50 py-2">Cancel</a>
                    <button type="submit" class="btn btn-primary w-50 py-2">Save Visit</button>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


