@model ClinicManagementSystem.ViewModel.Visit.VisitViewModel


@{
	ViewData["Title"] = "Visit Details";
}


<h2>Visit Details</h2>


<div>
	<h4>Visit</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">Id</dt>
		<dd class="col-sm-10">@Model.Id</dd>


		<dt class="col-sm-2">AppointmentId</dt>
		<dd class="col-sm-10">@Model.AppointmentId</dd>


		<dt class="col-sm-2">Diagnosis</dt>
		<dd class="col-sm-10">@Model.Diagnosis</dd>


		<dt class="col-sm-2">Prescription</dt>
		<dd class="col-sm-10">@Model.Prescription</dd>


		<dt class="col-sm-2">VisitDate</dt>
		<dd class="col-sm-10">@(Model.VisitDate?.ToString("yyyy-MM-dd HH:mm") ?? "")</dd>


		<dt class="col-sm-2">DoctorNotes</dt>
		<dd class="col-sm-10">@Model.DoctorNotes</dd>
	</dl>
</div>


<p>
	<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
	<a asp-action="Index">Back to List</a>
</p>