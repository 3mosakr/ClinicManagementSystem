@model ClinicManagementSystem.ViewModel.Visit.VisitDetailsViewModel

@{
    ViewData["Title"] = "Visit Details";
}

<h2>Visit Details</h2>

<div class="card p-3">
    <p><strong>Patient:</strong> @Model.PatientName</p>
    <p><strong>Doctor:</strong> @Model.DoctorName</p>
    <p><strong>Diagnosis:</strong> @Model.Diagnosis</p>
    <p><strong>Prescription:</strong> @Model.Prescription</p>
    <p><strong>Visit Date:</strong> @(Model.VisitDate?.ToString("yyyy-MM-dd HH:mm"))</p>
    <p><strong>Notes:</strong> @Model.DoctorNotes</p>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
