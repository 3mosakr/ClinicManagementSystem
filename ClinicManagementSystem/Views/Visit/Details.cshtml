@model ClinicManagementSystem.ViewModel.Visit.VisitDetailsViewModel
@{
    ViewData["Title"] = "Visit Details";
}

<div class=" my-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
            <h2 class="mb-0"><i class="bi bi-journal-medical"></i> Visit Details</h2>
        </div>

        <div class="card-body p-4">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-muted">Patient</h6>
                    <p class="fw-semibold">@Model.PatientName</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">Doctor</h6>
                    <p class="fw-semibold">@Model.DoctorName</p>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-muted">Visit Date</h6>
                    <p class="fw-semibold">@Model.VisitDateDate</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">Time</h6>
                    <p class="fw-semibold">@Model.VisitDateTime</p>
                </div>
            </div>

            <hr class="my-4">

            <div class="mb-4">
                <h6 class="text-muted mb-1"><i class="bi bi-clipboard2-pulse"></i> Diagnosis</h6>
                <div class="p-3 border rounded-3 bg-light">@Model.Diagnosis</div>
            </div>

            <div class="mb-4">
                <h6 class="text-muted mb-1"><i class="bi bi-capsule-pill"></i> Prescription</h6>
                <div class="p-3 border rounded-3 bg-light">@Model.Prescription</div>
            </div>

            <div class="mb-4">
                <h6 class="text-muted mb-1"><i class="bi bi-journal-text"></i> Doctor Notes</h6>
                <div class="p-3 border rounded-3 bg-light">@Model.DoctorNotes</div>
            </div>

            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Visit")" class="btn btn-outline-secondary me-2 px-4 py-2">
                    <i class="bi bi-arrow-left"></i> Back
                </a>

                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 py-2">
                    <i class="bi bi-pencil"></i> Edit Visit
                </a>

                @* <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirmDelete(event);">
                    <button type="submit" class="btn btn-outline-danger px-4 py-2 ms-2">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form> *@
            </div>
        </div>
    </div>
</div>



