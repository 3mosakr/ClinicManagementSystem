@model ClinicManagementSystem.ViewModel.Visit.VisitDetailsViewModel

@{
    ViewData["Title"] = "Visit Details";
}

<div class="d-flex justify-content-between align-items-center my-4">
    <h4 class="mb-0">Visit<span class="text-primary"> Details</span></h4>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i> Back to Visits
        </a>
    </div>
</div>

<div class="card shadow-sm mx-auto" style="">
    <div class="card-body">
        <div class="row g-3 align-items-start">
            <div class="col-12 col-md-8">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-muted">Patient</dt>
                    <dd class="col-sm-8 fw-semibold">@Model.PatientName</dd>

                    <dt class="col-sm-4 text-muted">Diagnosis</dt>
                    <dd class="col-sm-8">@Model.Diagnosis</dd>

                    <dt class="col-sm-4 text-muted">Prescription</dt>
                    <dd class="col-sm-8">@Model.Prescription</dd>

                    <dt class="col-sm-4 text-muted">Visit Date</dt>
                    <dd class="col-sm-8">@((Model.VisitDate)?.ToString("yyyy-MM-dd HH:mm") ?? "-")</dd>

                    <dt class="col-sm-4 text-muted">Notes</dt>
                    <dd class="col-sm-8">@Model.DoctorNotes</dd>
                </dl>
            </div>

            <div class="col-12 col-md-4">
                <div class="border rounded p-3 h-100 d-flex flex-column justify-content-between">
                    <div>
                        <h6 class="text-muted small mb-2">Quick Info</h6>
                        <p class="mb-1"><span class="text-muted">The Patient's Doctor Name : </span> <span class="fw-semibold">@Model.DoctorName</span></p>
                    </div>

                    <div class="d-flex mt-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm mx-1">
                                <i class="bi bi-pencil-square me-1"></i> Edit Visit
                            </a>

                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirmDelete(event);" class="mx-1">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </button>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {


    <style>
        #NXConfirmButtonOk,
        #NXConfirmButtonCancel {
            text-decoration: none !important;
        }
    </style>

    <script>
            Notiflix.Notify.init({
            position: 'right-bottom',
            distance: '15px',
            timeout: 2500,
            cssAnimationStyle: 'fade',
        });

        function confirmDelete(e) {
            e.preventDefault();
            Notiflix.Confirm.show(
                'Confirm Dialog',
                'Are you sure?',
                'Okey',
                'Cancel',
                function okCb() {
                        e.target.submit();
                },
                function cancelCb() {
                    Notiflix.Notify.info('Deletion canceled');
                },
                {
                    width: '320px',
                    borderRadius: '8px',
                    titleColor: '#e74c3c',
                    okButtonBackground: '#e74c3c',
                    cssAnimationStyle: 'fade',
                }
            );

            return false;
        }
    </script>
}