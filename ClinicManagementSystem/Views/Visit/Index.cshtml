@model List<ClinicManagementSystem.ViewModel.Visit.VisitViewModel> 


@{
    ViewData["Title"] = "Visits";
}

<div class="d-flex justify-content-between align-items-center my-4">
    <a asp-controller="Visit" style="text-decoration: none;">
        <h4 class="mb-0 text-black">
            Visits <span class="text-primary">Details</span>
        </h4>
    </a>

    <div>
        <form asp-action="Index" method="get" class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="searchTerm" value="@ViewBag.SearchTerm">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>

    </div>
    <a asp-action="Create" class="btn btn-outline-primary btn-sm">
        <i class="bi bi-plus-lg me-1"></i> Create Visit
    </a>
</div>

<table id="visitsTable" class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Patient Name</th>
            <th>Doctor Name</th>
            <th>Diagnosis</th>
            <th>Time</th>
            <th>Date</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.PatientName</td>
                <td>@item.DoctorName</td>
                <td>@item.Diagnosis</td>
                @* <td>@(item.VisitDate?.ToString("yyyy-MM-dd HH:mm") ?? "")</td> *@
                <td>
                    <div class="text-muted small">@(item.VisitDateTime ?? "")</div>
                </td>
                <td>
                    <div>@(item.VisitDateDate ?? "")</div>
                </td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm mx-1">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm mx-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirmDelete(event)">
                        <button type="submit" class="btn btn-outline-danger btn-sm mx-1">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-4">

            <!-- Previous -->
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage - 1)"
                   asp-route-searchTerm="@ViewBag.SearchTerm">
                    Previous
                </a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchTerm="@ViewBag.SearchTerm">
                        @i
                    </a>
                </li>
            }

            <!-- Next -->
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage + 1)"
                   asp-route-searchTerm="@ViewBag.SearchTerm">
                    Next
                </a>
            </li>
        </ul>
    </nav>
}



@section Scripts {


    <style>
      #NXConfirmButtonOk,
        #NXConfirmButtonCancel {
            text-decoration: none !important;
        }
    </style>

    <script>
            Notiflix.Notify.init({
            position: 'right-bottom',
            distance: '15px',
            timeout: 2500, 
            cssAnimationStyle: 'fade',
        });

        function confirmDelete(e) {
            e.preventDefault();
            const form = e.target;
            const url = form.action;
            Notiflix.Confirm.show(
                'Confirm Dialog',
                'Are you sure?',
                'Okey',
                'Cancel',
                function okCb() {
                    $.post(url, $(form).serialize())
                        .done(function () {
                            Notiflix.Notify.success('Visit deleted successfully');
                            $(form).closest('tr').fadeOut(500, function () {
                                $(this).remove();
                            });
                        })
                        .fail(function () {
                            Notiflix.Notify.failure('Error deleting visit');
                        });
                },
                function cancelCb() {
                    Notiflix.Notify.info('Deletion canceled');
                },
                {
                    width: '320px',
                    borderRadius: '8px',
                    titleColor: '#e74c3c',
                    okButtonBackground: '#e74c3c',
                    cssAnimationStyle: 'fade',
                }
            );

            return false;
        }
    </script>
}

