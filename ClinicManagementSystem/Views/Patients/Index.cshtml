@model List<ClinicManagementSystem.ViewModel.PatientViewModel>

@{
    ViewData["Title"] = "Patients";
}

<div class="my-5">

    <!-- Header & Add -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-people"></i> Patients</h2>

        <a class="btn btn-primary shadow-sm px-4" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Add Patient
        </a>
    </div>

    <!-- Filters/Search -->
    <div class="card shadow-sm border-0 mb-4 rounded-4">
        <div class="card-body">
            <form class="row g-3 align-items-center" method="get">

                <div class="col-md-6 d-flex gap-2">
                    <div class="flex-grow-1">
                        <label class="form-label fw-semibold">Search by Name</label>
                        <input class="form-control" type="search" name="search" value="@ViewBag.Search" placeholder="Type to search..." />
                    </div>

                    <div class="mt-4">
                        <button class="btn btn-outline-primary w-100 mt-2">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <!-- Alert -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Table -->
    <div class="table-responsive shadow-sm rounded-4">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-primary text-white">
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Phone</th>
                    <th>Gender</th>
                    <th>Date of Birth</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-light">
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FullName</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Gender</td>
                            <td>@item.DateOfBirth?.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm me-2">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirmDelete(event)">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">No patients found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-search="@ViewBag.Search">Previous</a>
                </li>
				<a href="e:\mvc\project\clinicmanagement\clinicmanagementsystem\clinicmanagementsystem\views\patients\index.cshtml">e:\mvc\project\clinicmanagement\clinicmanagementsystem\clinicmanagementsystem\views\patients\index.cshtml</a>
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@ViewBag.Search">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-search="@ViewBag.Search">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>


@if (TempData["ShowDeleteToast"] != null)
{
    <script>
        window.onload = function() {
            const toast = new bootstrap.Toast(document.getElementById("deleteToast"));
            toast.show();
        }
    </script>
}

@await Html.PartialAsync("_ConfirmDelete")
@await Html.PartialAsync("_ToastNotification")