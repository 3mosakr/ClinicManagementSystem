@model IEnumerable<ClinicManagementSystem.Models.Patient>

@{
    ViewData["Title"] = "Patients";
}

<div class="container shadow-sm p-5 mt-4 rounded bg-white">

    <!-- ================= TITLE & SEARCH ================= -->
    <div class="d-flex justify-content-between align-items-center mt-3 mb-4 border-bottom pb-3">
        <h4 class="fw-bold mb-0">
            <span class="text-primary">Patients List</span>
        </h4>

        <div class="d-flex align-items-center gap-2">
            <form asp-action="Index" method="get" class="d-flex">
                <input class="form-control me-2 shadow-sm rounded"
                       type="search"
                       placeholder="Search by name..."
                       aria-label="Search"
                       name="search"
                       value="@ViewBag.Search" />
                <button class="btn btn-outline-primary rounded shadow-sm" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </form>

            <a asp-action="Create" class="btn btn-outline-primary rounded shadow-sm d-flex align-items-center">
                <i class="bi bi-plus-lg me-1"></i> Add Patient
            </a>
        </div>
    </div>

    <!-- ================= ALERT MESSAGE ================= -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- ================= TABLE ================= -->
    <div class="table-responsive">
        <table id="patientsTable" class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Phone</th>
                    <th>Gender</th>
                    <th>Date of Birth</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    int index = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@item.FullName</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Gender</td>
                            <td>@item.DateOfBirth?.ToShortDateString()</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm mx-1 shadow-sm rounded" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm mx-1 shadow-sm rounded" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirmDelete(event)">
                                    <button type="submit" class="btn btn-outline-danger btn-sm mx-1 shadow-sm rounded" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            <i class="bi bi-info-circle me-1"></i> No patients found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <style>
        body {
            background-color: #f8f9fa;
        }

        .table thead th {
            font-weight: 600;
            color: #495057;
        }

        .table tbody tr:hover {
            background-color: #f1f5ff;
            transition: background 0.3s ease-in-out;
        }

        .btn-outline-info:hover {
            background-color: #0dcaf0;
            color: white;
        }

        .btn-outline-warning:hover {
            background-color: #ffc107;
            color: white;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

        .badge.bg-pink-subtle {
            background-color: #fce4ec;
        }

        .alert {
            border-left: 4px solid #198754;
        }
    </style>

    <script>
        function confirmDelete(e) {
            e.preventDefault();
            const form = e.target;
            const url = form.action;
            Notiflix.Confirm.show(
                'Confirm Deletion',
                'Are you sure you want to delete this patient?',
                'Yes, Delete',
                'Cancel',
                function okCb() {
                    $.post(url, $(form).serialize())
                        .done(function () {
                            Notiflix.Notify.success('Patient deleted successfully');
                            const row = $(form).closest('tr');
                            row.fadeOut(500, function () {
                                row.remove();
                            });
                        })
                        .fail(function () {
                            Notiflix.Notify.failure('Error deleting patient');
                        });
                },
                function cancelCb() {
                    Notiflix.Notify.info('Deletion canceled');
                },
                {
                    width: '320px',
                    borderRadius: '8px',
                    titleColor: '#e74c3c',
                    okButtonBackground: '#e74c3c',
                    cssAnimationStyle: 'fade',
                }
            );

            return false;
        }
    </script>
}
