@model ClinicManagementSystem.Models.Patient

<h2>Patient Details</h2>

<table class="table table-bordered">
    <tr><th>Full Name</th><td>@Model.FullName</td></tr>
    <tr><th>Phone</th><td>@Model.PhoneNumber</td></tr>
    <tr><th>Address</th><td>@Model.Address</td></tr>
    <tr><th>Gender</th><td>@Model.Gender</td></tr>
    <tr><th>Date of Birth</th><td>@Model.DateOfBirth?.ToShortDateString()</td></tr>
</table>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
