@model ClinicManagementSystem.ViewModel.Appointment.AppointmentViewModel
@{
    ViewData["Title"] = "Edit Appointment";
}

<div class="main-content">
    <div class="container pb-5 px-lg-5">
        <h2 class="page-title my-5">Edit Appointment</h2>

        <form asp-action="EditAppointment" asp-controller="Appointment" method="post" class="card border rounded shadow-sm p-4">
            <div class="card-body">
                <input type="hidden" asp-for="AppointmentId" />

                <div class="text-danger mb-3" asp-validation-summary="All"></div>

                <div class="mb-4">
                    <label asp-for="PatientName" class="form-label fw-bold"></label>
                    <input asp-for="PatientName" class="form-control py-3" readonly />
                    <input type="hidden" asp-for="PatientId" />
                    <span asp-validation-for="PatientName" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="DoctorId" class="form-label fw-bold"></label>
                    <select asp-for="DoctorId" class="form-select py-3">
                        <option value="">-- Select Doctor --</option>
                        @foreach (var doctor in Model.Doctors)
                        {
                            <option value="@doctor.Id" selected="@(doctor.Id == Model.DoctorId ? "selected" : null)">
                                @doctor.FullName
                            </option>
                        }
                    </select>
                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="AppointmentDateOnly" class="form-label fw-bold"></label>
                        <input asp-for="AppointmentDateOnly" class="form-control py-3" type="date" />
                        <span asp-validation-for="AppointmentDateOnly" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="AppointmentTimeOnly" class="form-label fw-bold"></label>
                        <input asp-for="AppointmentTimeOnly" class="form-control py-3" type="time" />
                        <span asp-validation-for="AppointmentTimeOnly" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Notes" class="form-label fw-bold"></label>
                    <textarea asp-for="Notes" class="form-control py-3" rows="3" placeholder="Add notes about this appointment..."></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Status" class="form-label fw-bold"></label>
                    <select asp-for="Status" class="form-select py-3">
                        <option value="Scheduled" selected="@(Model.Status == "Scheduled" ? "selected" : null)">Scheduled</option>
                        <option value="Completed" selected="@(Model.Status == "Completed" ? "selected" : null)">Completed</option>
                        <option value="Canceled" selected="@(Model.Status == "Canceled" ? "selected" : null)">Canceled</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-5">
                    <a asp-action="ShowAllAppointments" asp-controller="Appointment" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-primary px-5">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .main-content {
        max-width: 900px;
        margin: 0 auto;
        min-height: 100vh;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
    }

    .card {
        border-radius: 1rem;
    }

    .form-label {
        font-weight: 600;
    }

    .btn {
        border-radius: 0.5rem;
    }
</style>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
