@model List<DoctorViewModel>

@{
    ViewData["Title"] = "ShowAllDoctors";
}

<div class="container-fluid bg-light min-vh-100 py-4">
    <div class="container">
        <div class="row">
            <div class="col-12 ">

                <!-- Page Header -->
                <div class="text-center mb-5">
                    <h1 class="display-5 fw-bold text-dark mb-3">Doctors</h1>
                    <p class="lead text-muted">Find and manage cardiology specialists</p>
                </div>

                <!-- Search Section -->
                <div class="row mb-5">
                    <div class="col-12">
                        <div class="input-group shadow-sm rounded-3 overflow-hidden">
                            <span class="input-group-text bg-white border-0 px-4">
                                <i class="fas fa-search text-muted"></i>
                            </span>
                            <input type="text" class="form-control border-0 py-3" placeholder="Search by doctor name...">
                        </div>
                    </div>
                </div>

                <!-- Doctors List -->
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 my-3">
                            <div class="card border-0 shadow-sm rounded-3 h-100 transition-all">
                                <div class="card-body py-2 px-4">
                                    <div class="row align-items-center">
                                        <!-- Doctor Info -->
                                        <div class="col-md-8">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-4" style="width: 55px; height: 55px;">
                                                    <i class="fas fa-user-doctor text-white fs-4"></i>
                                                </div>
                                                <div>
                                                    <h5 class="h4 fw-bold text-dark mb-1">@item.FullName</h5>
                                                    <span class="badge bg-info bg-opacity-10 text-info fs-6 px-3 py-2 rounded-pill mt-2">@item.Specialty</span>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Action Buttons -->
                                        <div class="col-md-4 mt-3 mt-md-0">
                                            <div class="d-grid gap-2">
                                                <a class="btn btn-outline-success btn-sm fw-semibold py-2"
                                                   asp-action="ViewAppointmentsOfDoctor"
                                                   asp-controller="Appointment"
                                                   asp-route-id="@item.Id">
                                                    <i class="far fa-calendar-check me-2"></i>Available
                                                </a>
                                                <a class="btn btn-outline-primary btn-sm fw-semibold py-2"
                                                   asp-action="ViewAppointmentsOfDoctorForPatients"
                                                   asp-controller="Appointment"
                                                   asp-route-id="@item.Id">
                                                    <i class="far fa-calendar me-2"></i>View All
                                                </a>
                                                <a class="btn btn-outline-warning btn-sm fw-semibold py-2"
                                                   asp-action="CreateAppointment"
                                                   asp-controller="Appointment"
                                                   asp-route-id="@item.Id">
                                                    <i class="fas fa-plus me-2"></i>Add New
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    .transition-all {
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
    }

   
</style>
