
@model List<ReceptionistViewModel>

@{
    ViewData["Title"] = "Receptionists";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">
        <i class="bi bi-person-vcard-fill"></i> Receptionists
    </h2>
    <a class="btn btn-primary shadow-sm px-4" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Add Receptionist
    </a>
</div>

<div class="table-responsive shadow-sm rounded-4">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-primary text-white">
            <tr>
                @* <th>Id</th> *@
                <th>User Name</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Lockout Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var receptionist in Model)
            {
                <tr>
                    @* <td>@receptionist.Id</td> *@
                    <td>@receptionist.UserName</td>
                    <td>@receptionist.FullName</td>
                    <td>@receptionist.Email</td>
                    <td>@receptionist.PhoneNumber</td>
                    <td>@receptionist.LockoutEnabled</td>
                    <td>
                        @* <a asp-action="Lock" asp-route-id="@doctor.Id" class="btn btn-info ">Locked</a> *@
                        <a class="btn btn-outline-success btn-sm me-2"
                           asp-action="Details"
                           asp-route-id="@receptionist.Id">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <a class="btn btn-outline-primary btn-sm me-2"
                           asp-action="Edit"
                           asp-route-id="@receptionist.Id">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a class="btn btn-outline-danger btn-sm"
                           asp-action="Delete"
                           asp-route-id="@receptionist.Id">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

