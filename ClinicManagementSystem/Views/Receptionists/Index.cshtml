
@model List<ReceptionistViewModel>

@{
    ViewData["Title"] = "Receptionists";
}

<h2>Receptionists</h2>

<!-- create btn -->
<div class="container mb-2">
    <a asp-action="Create" class="btn btn-primary mb-3">Create New Receptionist</a>
</div>

<div class="container">
    <table class="table table-striped table-hover table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>User Name</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Lockout Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var receptionist in Model)
            {
                <tr>
                    <td>@receptionist.Id</td>
                    <td>@receptionist.UserName</td>
                    <td>@receptionist.FullName</td>
                    <td>@receptionist.Email</td>
                    <td>@receptionist.PhoneNumber</td>
                    <td>@receptionist.LockoutEnabled</td>
                    <td>
                        @* <a asp-action="Lock" asp-route-id="@doctor.Id" class="btn btn-info ">Locked</a> *@
                        <a asp-action="Details" asp-route-id="@receptionist.Id" class="btn btn-info ">Details</a>
                        <a asp-action="Edit" asp-route-id="@receptionist.Id" class="btn btn-success ">Edit</a>
                        <a asp-action="Delete" asp-route-id="@receptionist.Id" class="btn btn-danger ">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

