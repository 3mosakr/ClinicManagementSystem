
@model List<ReceptionistViewModel>

@{
    ViewData["Title"] = "Receptionists";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">
        <i class="bi bi-person-vcard-fill"></i> Receptionists
    </h2>
    <a class="btn btn-primary shadow-sm px-4" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Add Receptionist
    </a>
</div>


<!-- Alert -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-check-circle me-2"></i> @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="table-responsive shadow-sm rounded-4">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-primary text-white">
            <tr>
                @* <th>Id</th> *@
                <th>User Name</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Lockout Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var receptionist in Model)
            {
                <tr>
                    @* <td>@receptionist.Id</td> *@
                    <td>@receptionist.UserName</td>
                    <td>@receptionist.FullName</td>
                    <td>@receptionist.Email</td>
                    <td>@receptionist.PhoneNumber</td>
                    <td>@receptionist.LockoutEnabled</td>
                    <td>
                        @* <a asp-action="Lock" asp-route-id="@doctor.Id" class="btn btn-info ">Locked</a> *@
                        <a class="btn btn-outline-success btn-sm me-2"
                           asp-action="Details"
                           asp-route-id="@receptionist.Id">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <a class="btn btn-outline-primary btn-sm me-2"
                           asp-action="Edit"
                           asp-route-id="@receptionist.Id">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        @* <a class="btn btn-outline-danger btn-sm"
                           asp-action="Delete"
                           asp-route-id="@receptionist.Id">
                            <i class="bi bi-trash"></i> Delete
                        </a> *@

                        <form asp-action="Delete" asp-route-id="@receptionist.Id" method="post" style="display:inline;" onsubmit="return confirmDelete(event)">
                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>


@if (TempData["ShowDeleteToast"] != null)
{
    <script>
        window.onload = function() {
            const toast = new bootstrap.Toast(document.getElementById("deleteToast"));
            toast.show();
        }
    </script>
}

@await Html.PartialAsync("_ConfirmDelete")
@await Html.PartialAsync("_ToastNotification")