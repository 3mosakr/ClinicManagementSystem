@model ClinicManagementSystem.ViewModel.Doctor.DoctorViewModel

@{
    ViewData["Title"] = "Doctor Details";
}

<div class="my-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
            <h2 class="mb-0"><i class="bi bi-person-badge"></i> Doctor Details</h2>
        </div>

        <div class="card-body p-4">

            <div class="row mb-3">
                <div class="col-md-6">
                    <h6 class="text-muted">Doctor ID</h6>
                    <p class="fw-semibold">@Model.Id</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">User Name</h6>
                    <p class="fw-semibold">@Model.UserName</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h6 class="text-muted">Full Name</h6>
                    <p class="fw-semibold">@Model.FullName</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">Email</h6>
                    <p class="fw-semibold">@Model.Email</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h6 class="text-muted">Specialty</h6>
                    <p class="fw-semibold">@Model.Specialty</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">Phone Number</h6>
                    <p class="fw-semibold">@Model.PhoneNumber</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h6 class="text-muted">Lockout Enabled</h6>
                    <p class="fw-semibold">@Model.LockoutEnabled</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted"> </h6>
                    <p class="fw-semibold"></p>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                    <i class="bi bi-pencil"></i> Edit Doctor
                </a>
                <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-primary me-2">
                    <i class="bi bi-pencil"></i> Change Password
                </a>
                @* Keep delete here but we kept style same as patient page *@
                @* <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                    <i class="bi bi-trash"></i> Delete
                </a> *@
                @* <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirmDelete(event);">
                    <button type="submit" class="btn btn-outline-danger w-100 py-2">
                        <i class="bi bi-trash me-2"></i> Delete Doctor
                    </button>
                </form> *@
            </div>

        </div>
    </div>
</div>
