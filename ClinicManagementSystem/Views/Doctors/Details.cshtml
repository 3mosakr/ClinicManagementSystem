@model ClinicManagementSystem.ViewModel.Doctor.DoctorViewModel

@{
    ViewData["Title"] = "Doctor Details";
}


<div class="main-content">
    <div class="container pb-5 px-lg-5">
        <div class="d-flex justify-content-between align-items-center my-1">
            <h2 class="page-title mb-0">Doctor Details</h2>
            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                <i class="bi bi-arrow-left me-2"></i> Back to List
            </a>
        </div>

        <div class="card border rounded shadow-sm p-4">
            <div class="card-body">
                <div class="row g-4">
                    <!-- Left Section -->
                    <div class="col-md-8">

                        <div class="detail-group mb-4">
                            <label class="text-muted mb-1">Id</label>
                            <div>@Model.Id</div>
                        </div>

                        <div class="detail-group mb-4">
                            <label class="text-muted mb-1">User Name</label>
                            <div>@Model.UserName</div>
                        </div>

                        <div class="detail-group mb-4">
                            <label class="text-muted mb-1">Full Name</label>
                            <div>@Model.FullName</div>
                        </div>

                        <div class="detail-group mb-4">
                            <label class="text-muted mb-1">Email</label>
                            <div>@Model.Email</div>
                        </div>

                        <div class="detail-group mb-4">
                            <label class="text-muted mb-1">Phone Number</label>
                            <div>@Model.PhoneNumber</div>
                        </div>

                        <div class="detail-group mb-4">
                            <label class="text-muted mb-1">Lockout Enabled</label>
                            <div>@Model.LockoutEnabled</div>
                        </div>

                    </div>

                    <!-- Right Section -->
                    <div class="col-md-4">
                        <div class="p-4 border rounded bg-light d-flex flex-column justify-content-between">
                            <div>
                                <h6 class="text-uppercase text-muted small mb-3">Quick Info</h6>
                                <p class="mb-2"><span class="text-muted">Name:</span> <span class="fw-semibold">@Model.FullName</span></p>
                                <p class="mb-2"><span class="text-muted">Phone:</span> <span class="fw-semibold">@Model.PhoneNumber</span></p>
                            </div>

                            <div class="mt-4">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100 mb-2 py-2">
                                    <i class="bi bi-pencil-square me-2"></i> Edit Doctor
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger w-100 py-2">
                                    <i class="bi bi-trash me-2"></i> Delete Doctor
                                </a>
                                @* <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirmDelete(event);">
                                    <button type="submit" class="btn btn-outline-danger w-100 py-2">
                                        <i class="bi bi-trash me-2"></i> Delete Doctor
                                    </button>
                                </form> *@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

